<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/store_center_cardbg"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_act_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_mark"
                android:layout_width="3dp"
                android:layout_height="13sp"
                android:background="@color/actionbar_title_color" />

            <TextView
                android:id="@+id/tv_act_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/view_mark"
                android:text="wood121"
                android:textColor="@color/two_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_act_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="进行中"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_act_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_divider"
            android:layout_marginTop="15dp"
            android:text="储值种类：3种"
            android:textColor="@color/two_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_type"
            android:layout_marginTop="5dp"
            android:text="发卡总量：32张"
            android:textColor="@color/two_gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_card_type"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_more" />

        <TextView
            android:id="@+id/tv_act_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_num"
            android:layout_marginTop="5dp"
            android:text="2017.11.11 0:00-2017.11.12 0:00"
            android:textColor="@color/jiujiujiu"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>