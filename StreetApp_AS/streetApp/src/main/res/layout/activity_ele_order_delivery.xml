<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <include layout="@layout/top_view" />
     <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
           android:layout_marginTop="15dp"
            
            android:background="#C8C7CC" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/express_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/order_check"
            android:text="@string/express_delivery"
            android:textColor="#505050"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="15dp"
            android:background="#C8C7CC" />

        <RadioButton
            android:id="@+id/without_logistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/order_not_check"
            android:text="@string/without_logistics"
            android:textColor="#505050"
            android:textSize="16sp" />
    </RadioGroup>
      <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#C8C7CC" />
       <View
           android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            
            android:background="#C8C7CC" />
    
        <TextView
               android:id="@+id/selected"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:hint="@string/please_check_express_delivery_company"
                android:textColor="#505050"
                android:textSize="16dp" />
        <View
                       android:id="@+id/view2"
            
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#C8C7CC" />
        
         <View
                        android:id="@+id/view3"
             
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="15dp"
            android:background="#C8C7CC" />
        
        <RelativeLayout 
            android:background="#ffffff"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/relativeLayout"
             android:orientation="horizontal"
            >
        
         <EditText
                android:id="@+id/express_delivery_number"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:hint="@string/please_scan"
                android:textColorHint="#D3D3D8"
                android:textColor="#505050"
                android:singleLine="true"
                android:ellipsize="end"
                
                android:textSize="16dp" />
         <ImageButton
             android:layout_marginLeft="20dp"
              android:id="@+id/order_scan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@null"
              android:src="@drawable/order_scan"
              android:layout_marginRight="15dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
             
             />
         
         </RelativeLayout>
         <View
                        android:id="@+id/view4"
             
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#C8C7CC" />

</LinearLayout>